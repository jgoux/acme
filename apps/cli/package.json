{
  "name": "acme",
  "type": "module",
  "version": "1.0.0",
  "imports": {
    "#*": "./src/*",
    "#test": "./test/index.js"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "dependencies": {
    "@acme/sdk": "workspace:*",
    "yargs": "17.7.2"
  },
  "devDependencies": {
    "@acme/eslint-config": "workspace:*",
    "@acme/tsconfig": "workspace:*",
    "@total-typescript/ts-reset": "0.5.1",
    "@types/node": "18.17.15",
    "@types/yargs": "17.0.24",
    "eslint": "8.49.0",
    "execa": "8.0.1",
    "tsx": "3.12.9",
    "typescript": "5.2.2",
    "vitest": "0.34.4"
  },
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "clean": "rm -rf .dts .turbo dist .eslintcache",
    "dev": "tsx --conditions development src/index.ts",
    "lint": "eslint --cache .",
    "start": "node dist/index.js",
    "test": "vitest run",
    "type-check": "tsc --build"
  }
}
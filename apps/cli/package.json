{
  "name": "acme",
  "type": "module",
  "version": "1.0.0",
  "imports": {
    "#*": "./src/*",
    "#test": "./test/index.js"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "dependencies": {
    "@acme/api": "workspace:*",
    "@acme/core": "workspace:*",
    "@trpc/client": "11.10.0",
    "@trpc/server": "11.10.0",
    "yargs": "17.7.2"
  },
  "devDependencies": {
    "@acme/eslint-config": "workspace:*",
    "@acme/tsconfig": "workspace:*",
    "@total-typescript/ts-reset": "0.6.1",
    "@types/node": "24.10.13",
    "@types/yargs": "17.0.35",
    "eslint": "9.39.2",
    "execa": "9.6.1",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vitest": "3.2.4",
    "wait-for-localhost": "4.1.0"
  },
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "clean": "rm -rf .dts .turbo dist .eslintcache",
    "lint": "eslint --cache . --max-warnings 0",
    "start": "node dist/index.js",
    "start:dev": "tsx --conditions development src/index.ts",
    "test": "vitest run",
    "type-check": "tsc --build"
  }
}
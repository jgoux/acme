{
  "name": "@acme/api",
  "type": "module",
  "version": "1.0.0",
  "imports": {
    "#*": "./src/*",
    "#test": "./test/index.js"
  },
  "exports": {
    ".": {
      "development": "./src/router/index.ts"
    }
  },
  "dependencies": {
    "@acme/core": "workspace:*",
    "@trpc/server": "11.10.0",
    "drizzle-orm": "0.45.1",
    "postgres": "3.4.8",
    "valibot": "1.2.0"
  },
  "devDependencies": {
    "@acme/eslint-config": "workspace:*",
    "@acme/tsconfig": "workspace:*",
    "@total-typescript/ts-reset": "0.6.1",
    "@types/node": "24.10.13",
    "dotenv": "17.3.1",
    "dotenv-cli": "11.0.0",
    "drizzle-kit": "0.31.9",
    "eslint": "9.39.2",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vitest": "3.2.4"
  },
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "clean": "rm -rf .dts .turbo dist .eslintcache",
    "dev": "dotenv -c -- tsx --conditions development src/index.ts",
    "drizzle-kit": "dotenv -c -- drizzle-kit",
    "drizzle-kit:migrate": "dotenv -c -- tsx migrate.ts",
    "env:pull": "infisical export --env=${INFISICAL_ENV:-dev} --path=/apps/api > .env",
    "lint": "eslint --cache . --max-warnings 0",
    "start": "node dist/index.js",
    "test": "vitest run",
    "type-check": "tsc --build"
  }
}
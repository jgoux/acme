{
  "name": "@acme/api",
  "type": "module",
  "version": "1.0.0",
  "imports": {
    "#*": "./src/*",
    "#test": "./test/index.js"
  },
  "exports": {
    ".": {
      "development": "./src/router/index.ts"
    }
  },
  "dependencies": {
    "@acme/core": "workspace:*",
    "@trpc/server": "10.45.2",
    "drizzle-orm": "0.30.10",
    "postgres": "3.4.4",
    "valibot": "0.30.0"
  },
  "devDependencies": {
    "@acme/eslint-config": "workspace:*",
    "@acme/tsconfig": "workspace:*",
    "@total-typescript/ts-reset": "0.5.1",
    "@types/node": "20.12.8",
    "dotenv": "16.4.5",
    "dotenv-cli": "7.4.1",
    "drizzle-kit": "0.20.17",
    "eslint": "9.2.0",
    "tsx": "4.9.0",
    "typescript": "5.4.5",
    "vitest": "1.6.0"
  },
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "clean": "rm -rf .dts .turbo dist .eslintcache",
    "dev": "dotenv -c -- tsx --conditions development src/index.ts",
    "drizzle-kit": "dotenv -c -- drizzle-kit",
    "drizzle-kit:migrate": "dotenv -c -- tsx migrate.ts",
    "env:pull": "infisical export --env=${INFISICAL_ENV:-dev} --path=/apps/api > .env",
    "lint": "eslint --cache . --max-warnings 0",
    "start": "node dist/index.js",
    "test": "vitest run",
    "type-check": "tsc --build"
  }
}
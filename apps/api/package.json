{
  "name": "@acme/api",
  "type": "module",
  "version": "1.0.0",
  "imports": {
    "#*": "./src/*",
    "#test": "./test/index.js"
  },
  "exports": {
    ".": {
      "development": "./src/router.ts"
    }
  },
  "dependencies": {
    "@acme/sdk": "workspace:*",
    "@trpc/server": "10.38.3",
    "drizzle-orm": "0.28.6",
    "postgres": "3.3.5",
    "valibot": "0.17.0"
  },
  "devDependencies": {
    "@acme/eslint-config": "workspace:*",
    "@acme/tsconfig": "workspace:*",
    "@total-typescript/ts-reset": "0.5.1",
    "@types/node": "18.17.15",
    "dotenv-cli": "7.3.0",
    "drizzle-kit": "0.19.13",
    "eslint": "8.49.0",
    "tsx": "3.12.10",
    "typescript": "5.2.2",
    "vitest": "0.34.4"
  },
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "clean": "rm -rf .dts .turbo dist .eslintcache",
    "dev": "dotenv -c -- tsx --conditions development src/index.ts",
    "drizzle-kit": "dotenv -c -- drizzle-kit",
    "drizzle-kit:migrate": "dotenv -c -- tsx migrate.ts",
    "lint": "eslint --cache . --report-unused-disable-directives --max-warnings 0",
    "start": "node dist/index.js",
    "//test": "vitest run",
    "type-check": "tsc --build"
  }
}
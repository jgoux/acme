{
  "name": "@snaplet/web",
  "version": "1.0.0",
  "imports": {
    "#*": "./src/*"
  },
  "type": "module",
  "scripts": {
    "build": "tsc --build tsconfig.build.json && vite build",
    "clean": "rm -rf .dts .turbo dist .eslintcache",
    "dev": "vite",
    "lint": "eslint --cache . --max-warnings 0",
    "preview": "vite preview",
    "test:components": "playwright test -c playwright-ct.config.ts",
    "test:e2e": "playwright test",
    "test:storybook": "test-storybook",
    "type-check": "tsc --build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@acme/eslint-config": "workspace:*",
    "@playwright/experimental-ct-react": "1.38.1",
    "@playwright/test": "1.38.1",
    "@storybook/addon-a11y": "7.4.4",
    "@storybook/addon-essentials": "7.4.4",
    "@storybook/addon-interactions": "7.4.4",
    "@storybook/addon-links": "7.4.4",
    "@storybook/jest": "0.2.2",
    "@storybook/react": "7.4.4",
    "@storybook/react-vite": "7.4.4",
    "@storybook/test-runner": "0.13.0",
    "@storybook/testing-library": "0.2.1",
    "@total-typescript/ts-reset": "0.5.1",
    "@types/node": "18.17.18",
    "@types/react": "18.2.22",
    "@types/react-dom": "18.2.7",
    "@vitejs/plugin-react": "4.0.4",
    "axe-playwright": "1.2.3",
    "eslint": "8.50.0",
    "storybook": "^7.4.4",
    "typescript": "5.2.2",
    "vite": "4.4.9"
  }
}
{
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@acme/eslint-config": "workspace:*",
    "@acme/tsconfig": "workspace:*",
    "knip": "2.24.0",
    "turbo": "1.10.13",
    "typescript": "5.2.2",
    "vitest": "0.34.4"
  },
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "clean-monorepo": "git clean -dfX",
    "lint": "turbo run lint",
    "lint-monorepo": "knip",
    "test": "turbo run test",
    "type-check": "tsc --build",
    "update-deps": "pnpm update \"\\!@types/node\" --interactive --recursive --latest"
  },
  "packageManager": "pnpm@8.7.5",
  "engines": {
    "node": ">=18.12.0 <19"
  }
}